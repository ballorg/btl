{
	"version": 4,

	"configurePresets":
	[
		{
			"name": "NinjaBase",

			"binaryDir": "${sourceDir}/build/${hostSystemName}/${presetName}",
			"generator": "Ninja",
			"description": "Build using Ninja generator",
			"cacheVariables":
			{
				"CMAKE_CONFIGURATION_TYPES": "Debug;RelWithDebInfo;Release"
			},

			"hidden": true
		},
		{
			"name": "Debug",
			"displayName": "Ninja - Debug",
			"inherits": "NinjaBase",

			"cacheVariables":
			{
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "RelWithDebInfo",
			"displayName": "Ninja - Release With Debug Info",
			"description": "Build using Visual Studio generator",
			"inherits": "NinjaBase",

			"cacheVariables":
			{
				"CMAKE_BUILD_TYPE": "RelWithDebInfo"
			}
		},
		{
			"name": "Release",
			"displayName": "Ninja - Release",
			"inherits": "NinjaBase",

			"cacheVariables":
			{
				"CMAKE_BUILD_TYPE": "Release"
			}
		}
	],

	"buildPresets":
	[
		{
			"name": "Debug",

			"displayName": "Ninja - Debug",
			"description": "Debug building with Ninja",
			"configurePreset": "Debug"
		},
		{
			"name": "RelWithDebInfo",

			"displayName": "Ninja - Release With Debug Info",
			"description": "Release With Debug Info building with Ninja configuration",
			"configurePreset": "RelWithDebInfo"
		},
		{
			"name": "Release",

			"displayName": "Ninja - Release",
			"description": "Release building with Ninja configuration",
			"configurePreset": "Release"
		}
	],

	"testPresets":
	[
		{
			"name": "Debug",
			"displayName": "CTest - Ninja - Debug",
			"configurePreset": "Debug",
			"output":
			{
				"outputOnFailure": true
			}
		},
		{
			"name": "RelWithDebInfo",
			"displayName": "CTest - Ninja - RelWithDebInfo",
			"configurePreset": "RelWithDebInfo",
			"output":
			{
				"outputOnFailure": true
			}
		},
		{
			"name": "Release",
			"displayName": "CTest - Ninja - Release",
			"configurePreset": "Release",
			"output":
			{
				"outputOnFailure": true
			}
		}
	]
}